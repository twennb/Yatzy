<Window x:Class="Alternate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alternate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Vänster kolumn, målen -->
        <Label Grid.Row="0" Grid.Column="0"
           BorderBrush="Black" BorderThickness="1.5"
           Content="Namn:"/>
        <Label Grid.Row="1" Grid.Column="0"
           BorderBrush="DarkGray" BorderThickness="1"
           Content="Ettor"/>
        <Label Grid.Row="2" Grid.Column="0"
           BorderBrush="DarkGray" BorderThickness="1"
           Content="Tvåor"/>
        <Label Grid.Row="3" Grid.Column="0"
           BorderBrush="DarkGray" BorderThickness="1"
           Content="Treor"/>
        <Label Grid.Row="4" Grid.Column="0"
           BorderBrush="DarkGray" BorderThickness="1"
           Content="Fyror"/>
        <Label Grid.Row="5" Grid.Column="0"
           BorderBrush="DarkGray" BorderThickness="1"
           Content="Femmor"/>
        <Label Grid.Row="6" Grid.Column="0"
           BorderBrush="DarkGray" BorderThickness="1"
           Content="Sexor"/>
        <Button Grid.Row="7" Grid.Column="0"
           BorderBrush="DarkGray" BorderThickness="1.5"
           Content="Summa"/>
        <!--Click="SummaButton_Click"/-->
        <Button Grid.Row="8" Grid.Column="0"
           BorderBrush="Black" BorderThickness="1.5"
           Content="Bonus"/>
        <!--="BonusButton_Click"/-->


        <!-- Spelares namn -->
        <TextBox Grid.Row="0" Grid.Column="1" MinWidth="45"
             BorderBrush="Black" BorderThickness="1.5"/>
        <TextBox Grid.Row="0" Grid.Column="2" MinWidth="45"
             BorderBrush="Black" BorderThickness="1.5"/>
        <TextBox Grid.Row="0" Grid.Column="3" MinWidth="45"
             BorderBrush="Black" BorderThickness="1.5"/>
        <TextBox Grid.Row="0" Grid.Column="4" MinWidth="45"
             BorderBrush="Black" BorderThickness="1.5"/>

        <!-- Spelare 1 -->
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="FirstPlayerOnes" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="FirstPlayerTwos" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="FirstPlayerThrees" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="FirstPlayerFours" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="FirstPlayerFives" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="6" Grid.Column="1" x:Name="FirstPlayerSixes" KeyDown="player_KeyDown"/>
        <Label Grid.Row="7" Grid.Column="1" x:Name="playerOneSum"
           BorderBrush="DarkGray" BorderThickness="1"/>
        <Label Grid.Row="8" Grid.Column="1" x:Name="playerOneBonus"
           BorderBrush="DarkGray" BorderThickness="1"/>
        <!-- Spelare 2 -->
        <TextBox Grid.Row="1" Grid.Column="2" x:Name="SecondPlayerOnes" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="2" Grid.Column="2" x:Name="SecondPlayerTwos" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="3" Grid.Column="2" x:Name="SecondPlayerThrees" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="4" Grid.Column="2" x:Name="SecondPlayerFours" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="5" Grid.Column="2" x:Name="SecondPlayerFives" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="6" Grid.Column="2" x:Name="SecondPlayerSixes" KeyDown="player_KeyDown"/>
        <Label Grid.Row="7" Grid.Column="2" x:Name="playerTwoSum"
           BorderBrush="DarkGray" BorderThickness="1"/>
        <Label Grid.Row="8" Grid.Column="2" x:Name="playerTwoBonus"
           BorderBrush="DarkGray" BorderThickness="1"/>
        <!-- Spelare 3 -->
        <TextBox Grid.Row="1" Grid.Column="3" x:Name="ThirdPlayerOnes" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="2" Grid.Column="3" x:Name="ThirdPlayerTwos" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="3" Grid.Column="3" x:Name="ThirdPlayerThrees" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="4" Grid.Column="3" x:Name="ThirdPlayerFours" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="5" Grid.Column="3" x:Name="ThirdPlayerFives" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="6" Grid.Column="3" x:Name="ThirdPlayerSixes" KeyDown="player_KeyDown"/>
        <Label Grid.Row="7" Grid.Column="3" x:Name="playerThreeSum" 
           BorderBrush="DarkGray" BorderThickness="1"/>
        <Label Grid.Row="8" Grid.Column="3" x:Name="playerThreeBonus"
           BorderBrush="DarkGray" BorderThickness="1"/>
        <!-- Spelare 4 -->
        <TextBox Grid.Row="1" Grid.Column="4" x:Name="FourthPlayerOnes" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="2" Grid.Column="4" x:Name="FourthPlayerTwos" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="3" Grid.Column="4" x:Name="FourthPlayerThrees" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="4" Grid.Column="4" x:Name="FourthPlayerFours" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="5" Grid.Column="4" x:Name="FourthPlayerFives" KeyDown="player_KeyDown"/>
        <TextBox Grid.Row="6" Grid.Column="4" x:Name="FourthPlayerSixes" KeyDown="player_KeyDown"/>
        <Label Grid.Row="7" Grid.Column="4" x:Name="playerFourSum"
           BorderBrush="DarkGray" BorderThickness="1"/>
        <Label Grid.Row="8" Grid.Column="4" x:Name="playerFourBonus"
           BorderBrush="DarkGray" BorderThickness="1"/>
    </Grid>
</Window>
